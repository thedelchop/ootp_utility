{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "isolatedModules": false,
    "lib": [
      "dom",
      "esnext",
      "es2018.promise"
    ],
    "jsx": "react",
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "assets/js",
    "paths": {
      "*": ["*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./_build/**/*",
    "./priv/**/*",
    "./deps/**/*",
    "./test/**/*"
  ]
}
